<%- include('../partials/header3') %>
<% if (!loggedUser) { %>
    <span id="error"> Fa√ßa login para adicionar itens ao carrinho</span>
<% } %>
<body>
    <div class="d-flex justify-content-center" id='div-details'>

        
        <h1 class="h1"><%- products.name %></h1>
        <div>
            <img 
            class="rounded-circle"
            src="/images/uploads/<%= products.img %>"
            alt="imagem <%- products.name %>"
            width="100"
            height="100"
            />
            <tbody class='float-left'>
                <table class='details-table'>
                    <tr>
                        <th><%- products.name %></th>                   
                    </tr>
                    <tr>
                        <td>R$<%-products.price %></td>
                    </tr>
                    <tr>
                    <td><%-products.description %></td>
                    </tr>
                    <% if(loggedUser) { %>
                        <% if(usertype == 'admin') {%>
                            <th>
                                <a role="button"
                            href="/products/edit/<%-products.id%>"
                            class="btn btn-warning">
                                Editar
                            </a>
                            </th>
                        <% } %>    
                    <% } else { %>
                        <th>
                            <form action='/products/addtocart/<%-products.id%>?_method=POST' method='post'>
                                <button type="submit" class="btn btn-success">
                                    Adicionar ao carrinho
                                </button>
                            </form>
                        </th>
                    <% } %>
                </table>
            </tbody>
        </div>
        
    </div>
</body>
<%- include('../partials/footer') %>